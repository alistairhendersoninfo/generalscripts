<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Symfony Sales Workspace{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.3/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-slate-100 min-h-screen">
    <nav class="bg-slate-900 text-white">
      <div class="max-w-6xl mx-auto flex items-center justify-between px-4 py-3">
        <a href="{{ path('symfony_dashboard') }}" class="text-xl font-semibold">Symfony Sales Orders</a>
        <div class="space-x-4 text-sm">
          <a class="hover:underline" href="{{ path('symfony_customer_index') }}">Customers</a>
          <a class="hover:underline" href="{{ path('symfony_address_index') }}">Delivery Addresses</a>
          <a class="hover:underline" href="{{ path('symfony_sku_index') }}">SKUs</a>
          <a class="hover:underline" href="{{ path('symfony_order_index') }}">Orders</a>
        </div>
      </div>
    </nav>
    <main class="max-w-6xl mx-auto py-10 px-4">
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="mb-4 rounded bg-emerald-100 border border-emerald-400 text-emerald-800 px-4 py-3">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}
      {% block body %}{% endblock %}
    </main>
  </body>
</html>
