{% extends 'base.html.twig' %}
{% block title %}New SKU{% endblock %}
{% block body %}
<h1 class="text-2xl font-semibold mb-6">Add SKU</h1>
{{ form_start(form, {'attr': {'class': 'bg-white rounded shadow p-6 space-y-4'}}) }}
  {% for field in form %}
  <div>
    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
    {{ form_widget(field, {'attr': {'class': 'input w-full border border-slate-200 rounded px-3 py-2'}}) }}
    {{ form_errors(field) }}
  </div>
  {% endfor %}
  <button type="submit" class="bg-slate-900 text-white px-4 py-2 rounded">Save</button>
{{ form_end(form) }}
{% endblock %}
